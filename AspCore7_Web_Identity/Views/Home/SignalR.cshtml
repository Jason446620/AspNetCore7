@{
    ViewData["Title"] = "SignalR";
}
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#btnChat").click(function () {
            window.open('httP://codeo.cn/', 'newwindow', "width='125%' height='5000' frameborder='0' style='position:relative; top:-475px; float:left; left:-193px;' scrolling='no'")
        })

    })
</script>

<button id="btnChat">open chat</button>
<br />
<div class="container">
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-2">User</div>
        <div class="col-4"><input type="text" id="userInput" /></div>
    </div>
    <div class="row">
        <div class="col-2">Message</div>
        <div class="col-4"><input type="text" id="messageInput" /></div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-6">
            <input type="button" id="sendButton" value="Send Message" />
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-6">
        <ul id="messagesList"></ul>
    </div>
</div>
<script src="~/js/GlobalException.js"></script>
<script src="~/js/chat.js"></script>